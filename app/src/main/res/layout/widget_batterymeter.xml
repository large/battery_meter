<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingHorizontal="8dp"
    android:paddingVertical="24dp">

    <FrameLayout
        android:id="@+id/pole"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#a0a0a0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/pole"
        android:background="#a0a0a0"
        android:baselineAligned="false"
        android:weightSum="100.0">

        <FrameLayout
            android:id="@+id/percent10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent40"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent60"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent70"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent80"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent90"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

        <FrameLayout
            android:id="@+id/percent100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="10.0"
            android:background="#00ff00" />

    </LinearLayout>

    <TextView
        android:id="@+id/percent"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/pole"
        android:textAlignment="center"
        android:textColor="@color/black" />

</RelativeLayout>
